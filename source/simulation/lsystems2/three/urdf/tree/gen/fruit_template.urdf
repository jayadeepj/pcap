<?xml version="1.0"?>

<robot name="">

    <fruit_joint_set name="fruit_joint">
        <!-- Second rotation (around X-axis) -->
        <joint name="fr-x-joint" type="revolute">
            <parent link="link-branch-XXXX"/>
            <child link="fr-x-dummy-link"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <axis xyz="1 0 0"/>
            <limit lower="-3.14159" upper="3.14159" effort="1"/>
            <dynamics damping="0" friction="0"/>
        </joint>

        <link name="fr-x-dummy-link">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="1e-6"/>
                <inertia ixx="1e-12" ixy="0.0" ixz="0.0" iyy="1e-12" iyz="0.0" izz="1e-12"/>
            </inertial>

        </link>

        <!-- Second rotation (around Y-axis) -->
        <joint name="fr-y-joint" type="revolute">
            <parent link="fr-x-dummy-link"/>
            <child link="fr-y-dummy-link"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <axis xyz="0 1 0"/>
            <limit lower="-3.14159" upper="3.14159" effort="1"/>
            <dynamics damping="0" friction="0"/>
        </joint>
        <link name="fr-y-dummy-link">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="1e-6"/>
                <inertia ixx="1e-12" ixy="0.0" ixz="0.0" iyy="1e-12" iyz="0.0" izz="1e-12"/>
            </inertial>
        </link>

        <!-- prismatic joint which can mimic the break, and the swing -->
        <joint name="fr-prismatic-joint" type="prismatic">
            <parent link="fr-y-dummy-link"/>
            <child link="link-branch-XXXX"/>
            <origin xyz="0 0 0." rpy="0 0 0"/>
            <axis xyz="1 1 0"/>
            <limit lower="0" upper="0.1"/>
            <dynamics damping="0" friction="0"/>
        </joint>

    </fruit_joint_set>

    <!-- fruit sphere -->
    <link name="default_fruit_link_name">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
            <material name="red">
                <color rgba="1.0 0. 0. 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.002"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.00001"/>
        </inertial>
    </link>


</robot>

