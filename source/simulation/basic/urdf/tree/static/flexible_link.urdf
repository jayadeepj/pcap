<?xml version="1.0"?>
<robot name="origins">

    <!-- This first link called "world" is empty -->
    <link name="world"></link>


    <!-- A simple fixed joint from our empty world link, to our base. -->
    <!-- The base origin is offset from the world origin. -->
    <joint name="base_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="world"/>
        <child link="base_link"/>
    </joint>



  <link name="base_link">
    <visual>
    <!-- Half the height to keep it above ground -->
     <origin xyz="0 0 0.1"/>
      <geometry>
        <cylinder length="0.2" radius="0.1"/>
      </geometry>
    <material name="orange">
      <color rgba="1 0.3 0.1 0.8"/>
    </material>
    </visual>

    <collision>
     <origin xyz="0 0 0.1"/>
      <geometry>
        <cylinder length="0.2" radius="0.1"/>
      </geometry>
    </collision>

    <inertial>
     <mass value="0.5" />
     <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.003" />
   </inertial>


  </link>


  <joint name="base_to_linkslice1" type="revolute">
    <parent link="base_link"/>
    <child link="linkslice1"/>
   <!-- y=parent branch(N-1) radius/2 , z = 3/4th height  -->
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
    <axis xyz="1 0 0" />
    <limit lower="-0.52" upper="0.52"/>
    <dynamics damping="10.0" friction="10.0" />
  </joint>


  <link name="linkslice1">
    <visual>
      <geometry>
          <cylinder length="0.2" radius="0.1"/>
      </geometry>

      <!-- the visual origin is w.r.t to link origin (written in joint )
      z = length of this link
      -->
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <material name="blue1">
      <color rgba="0.6 0.3 0.1 0.8"/>
    </material>
    </visual>

     <collision>
      <geometry>
        <cylinder length="0.1" radius="0.1"/>
      </geometry>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </collision>

     <inertial>
     <mass value="0.5" />
     <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.003" />
   </inertial>

  </link>



 <joint name="inkslice1_to_linkslice2" type="revolute">
    <parent link="linkslice1"/>
    <child link="linkslice2"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
    <axis xyz="1 0 0" />
    <limit lower="-0.52" upper="0.52"/>
    <dynamics damping="10.0" friction="10.0" />
  </joint>


  <link name="linkslice2">
    <visual>
      <geometry>
          <cylinder length="0.2" radius="0.1"/>
      </geometry>

      <!-- the visual origin is w.r.t to link origin (written in joint )
      z = length of this link
      -->
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <material name="dark">
      <color rgba="1 0.3 0.1 0.8"/>
    </material>
    </visual>

     <collision>
      <geometry>
        <cylinder length="0.1" radius="0.1"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>

     <inertial>
     <mass value="0.5" />
     <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.003" />
   </inertial>

  </link>



</robot>


